# ============================================
# CONFIGURAÇÃO DO AMBIENTE - FESTEJA KIDS
# ============================================

# --------------------------------------------
# BANCO DE DADOS
# --------------------------------------------
# Para MySQL local:
# DATABASE_URL=mysql://usuario:senha@localhost:3306/festeja_kids

# Para SQLite local (alternativa mais simples):
# DATABASE_URL=file:./festeja_kids.db

DATABASE_URL=

# --------------------------------------------
# AUTENTICAÇÃO
# --------------------------------------------
# Chave secreta para JWT (gere uma chave aleatória)
JWT_SECRET=sua_chave_secreta_aqui_mude_isso

# --------------------------------------------
# SUPABASE (Opcional)
# --------------------------------------------
# Identificador do projeto (slug)
SUPABASE_PROJECT_ID=

# URL base do projeto (ex.: https://<project>.supabase.co)
SUPABASE_URL=

# Conexão direta com o banco Postgres da Supabase (NÃO versionar a real)
# Formato: postgresql://usuario:senha@host:5432/postgres
SUPABASE_DATABASE_URL=

# Chaves da API (mantenha privadas)
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=

# Token JWT opcional para testes locais
SUPABASE_JWT=

# --------------------------------------------
# OAUTH (MANUS)
# --------------------------------------------
# ID da aplicação no Manus
VITE_APP_ID=

# URL do servidor OAuth
OAUTH_SERVER_URL=

# OpenID do proprietário (admin)
OWNER_OPEN_ID=

# --------------------------------------------
# FORGE API (Opcional - para IA)
# --------------------------------------------
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# --------------------------------------------
# AMBIENTE
# --------------------------------------------
NODE_ENV=development
