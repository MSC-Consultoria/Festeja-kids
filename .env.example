# ============================================
# CONFIGURAÇÃO DO AMBIENTE - FESTEJA KIDS
# ============================================

# --------------------------------------------
# BANCO DE DADOS
# --------------------------------------------
# Para MySQL local:
# DATABASE_URL=mysql://usuario:senha@localhost:3306/festeja_kids

# Para SQLite local (alternativa mais simples):
# DATABASE_URL=file:./festeja_kids.db

DATABASE_URL=

# --------------------------------------------
# AUTENTICAÇÃO
# --------------------------------------------
# Chave secreta para JWT (gere uma chave aleatória)
JWT_SECRET=sua_chave_secreta_aqui_mude_isso

# --------------------------------------------
# SUPABASE (Opcional - Para Deploy em Produção)
# --------------------------------------------
# ATENÇÃO: Estas configurações são para deploy na Supabase (PostgreSQL)
# Para desenvolvimento local, continue usando MySQL ou SQLite

# Identificador do projeto (slug) - obtenha em Settings > General
SUPABASE_PROJECT_ID=

# URL base do projeto (ex.: https://abcdefghijklmnop.supabase.co)
# Obtenha em Settings > API > Project URL
SUPABASE_URL=

# Conexão direta com o banco Postgres da Supabase (NÃO versionar a real)
# Obtenha em Settings > Database > Connection String (Transaction Mode)
# Formato: postgresql://postgres.[ref]:[password]@aws-0-sa-east-1.pooler.supabase.com:5432/postgres
# IMPORTANTE: Use esta URL em DATABASE_URL quando fizer deploy na Supabase
SUPABASE_DATABASE_URL=

# Chave pública da API (pode ser exposta no frontend)
# Obtenha em Settings > API > Project API keys > anon public
SUPABASE_ANON_KEY=

# Chave privada da API (NUNCA exponha no frontend ou versione)
# Obtenha em Settings > API > Project API keys > service_role
SUPABASE_SERVICE_ROLE_KEY=

# Token JWT opcional para testes locais (raramente necessário)
SUPABASE_JWT=

# --------------------------------------------
# OAUTH (MANUS)
# --------------------------------------------
# ID da aplicação no Manus
VITE_APP_ID=

# URL do servidor OAuth
OAUTH_SERVER_URL=

# OpenID do proprietário (admin)
OWNER_OPEN_ID=

# --------------------------------------------
# FORGE API (Opcional - para IA)
# --------------------------------------------
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# --------------------------------------------
# AMBIENTE
# --------------------------------------------
NODE_ENV=development
